    <h1>BUS 55 Â· CHERRY HILL RD</h1>
    <div id="arrival-time">Loading...</div>
    <script>
        fetch('https://api.wmata.com/NextBusService.svc/json/jPredictions?StopID=6000756&RouteID=55', {
            headers: { 'api_key': '9a890f42dfdb4cb7b9fd9caf80ac2d94' }
        })
        .then(response => response.json())
        .then(data => {
            const nextBus = data.Predictions?.[0];
            document.getElementById('arrival-time').innerHTML = 
                nextBus ? (nextBus.Min === 0 ? "ARRIVING NOW" : `${nextBus.Min} MIN`) : "NO BUSES";
        })
        .catch(() => document.getElementById('arrival-time').textContent = "SERVICE UNAVAILABLE");
    </script>
